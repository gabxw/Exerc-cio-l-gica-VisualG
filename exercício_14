algoritmo "Preços de produtos"
    var
        preco: real
        maior, menor: real
        i: inteiro
    inicio
        i <- 1
        escreva("Digite o preço do produto 1: ")
        leia(preco)
        maior <- preco
        menor <- preco
        enquanto i < 8 faca
            i <- i + 1
            escreva("Digite o preço do produto ", i, ": ")
            leia(preco)
            se preco > maior entao
                maior <- preco
            fimse
            se preco < menor entao
                menor <- preco
            fimse
        fimenquanto
        escreval("Maior preço: ", maior)
        escreval("Menor preço: ", menor)
    fimalgoritmo
